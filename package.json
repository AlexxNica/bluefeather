  },
  "ava": {
    "babel": {
      "babelrc": true
    },
    "require": "babel-register"
  },
  "description": "A collection of Promise utilities.",
  "devDependencies": {
    "ava": "^0.16.0",
    "babel-cli": "^6.18.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-istanbul": "^2.0.3",
    "babel-plugin-transform-async-to-generator": "^6.16.0",
    "babel-plugin-transform-flow-comments": "^6.17.0",
    "babel-plugin-transform-function-bind": "^6.8.0",
    "babel-plugin-transform-object-rest-spread": "^6.16.0",
    "babel-preset-es2015-node4": "^2.1.0",
    "babel-register": "^6.18.0",
    "conventional-changelog-cli": "^1.2.0",
    "conventional-changelog-lint": "^1.1.0",
    "conventional-changelog-lint-config-canonical": "^1.0.0",
    "coveralls": "^2.11.15",
    "documentation": "^4.0.0-beta13",
    "eslint": "^3.10.0",
    "eslint-config-canonical": "^5.5.0",
    "flow-bin": "^0.35.0",
    "husky": "^0.11.9",
    "nyc": "^9.0.0-candidate.1",
    "semantic-release": "^4.3.5"
  },
  "engines": {
    "node": ">4.0.0"
  },
  "keywords": [
    "promise"
  ],
  "license": "BSD-3-Clause",
  "main": "./dist/bluefeather.js",
  "name": "bluefeather",
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "instrument": false,
    "reporter": [
      "text-lcov"
    ],
    "require": [
      "babel-register"
    ],
    "sourceMap": false
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gajus/bluefeather"
  },
  "scripts": {
    "build": "NODE_ENV=production babel ./src --out-dir ./dist --copy-files",
    "commitmsg": "conventional-changelog-lint -e",
    "lint": "eslint ./src ./test && flow",
    "precommit": "npm run test",
    "test": "NODE_ENV=development nyc ava --verbose --serial && npm run lint && npm run build"
  },
  "version": "1.0.0"
}
